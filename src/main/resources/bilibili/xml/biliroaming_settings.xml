<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.preference.PreferenceCategory>
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizePlayerFragment"
            android:key="customize_player"
            android:title="@string/biliroaming_customize_player_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizeHomeFragment"
            android:key="customize_home"
            android:title="@string/biliroaming_customize_home_title"
            android:summary="@string/biliroaming_customize_home_summary" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizeDynamicFragment"
            android:key="customize_dynamic"
            android:title="@string/biliroaming_customize_dynamic_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizeMineFragment"
            android:key="customize_mine"
            android:title="@string/biliroaming_customize_mine_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizeLiveRoomFragment"
            android:key="customize_live_room"
            android:title="@string/biliroaming_customize_live_room_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizeVideoDetailFragment"
            android:key="customize_video_detail"
            android:title="@string/biliroaming_customize_video_detail_title" />
        <androidx.preference.Preference
            android:fragment="app.revanced.bilibili.settings.fragments.CustomizeSpaceFragment"
            android:key="customize_space_category"
            android:title="@string/biliroaming_customize_space_category_title" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory>
        <androidx.preference.SwitchPreferenceCompat
            android:key="teenagers_mode_dialog"
            android:title="@string/biliroaming_teenagers_mode_dialog_title"
            android:summary="@string/biliroaming_teenagers_mode_dialog_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="comment_copy"
            android:title="@string/biliroaming_comment_copy_title"
            android:summary="@string/biliroaming_comment_copy_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:dependency="comment_copy"
            android:key="comment_copy_enhance"
            android:title="@string/biliroaming_comment_copy_enhance_title"
            android:summary="@string/biliroaming_comment_copy_enhance_summary" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory>
        <androidx.preference.SwitchPreferenceCompat
            android:key="purify_splash"
            android:title="@string/biliroaming_purify_splash_title"
            android:summary="@string/biliroaming_purify_splash_summary" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="purify_search"
            android:title="@string/biliroaming_purify_search_title"
            android:summary="@string/biliroaming_purify_search_summary" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>
