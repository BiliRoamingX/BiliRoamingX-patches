{
  "branches": [
    "main",
    {
      "name": "dev",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer", {
        "releaseRules": [
          { "type": "build", "scope": "Needs bump", "release": "patch" }
        ]
      }
    ],
    
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/libs/*.jar"
          },
          {
            "path": "patches.json"
          }
        ],
        successComment: false
      }
    ],
    [
      "@saithodev/semantic-release-backmerge",
      {
        backmergeBranches: [{"from": "main", "to": "dev"}],
        clearWorkspace: true
      }
    ]
  ]
}
